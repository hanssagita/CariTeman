<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:id="@+id/relativeEventCard"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/eventCardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ic_menu_camera"
            android:id="@+id/eventCardHostedImg"
            android:layout_margin="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <cariteman.hans.tools.CaviarTextView
            android:id="@+id/eventCardHostedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hosted By Hans"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@+id/eventCardHostedImg"
            android:layout_toEndOf="@+id/eventCardHostedImg" />

        <cariteman.hans.tools.CaviarTextView
            android:id="@+id/eventCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taylor Swift Tour"
            android:textColor="#fff"
            android:textSize="26dp"
            android:layout_marginLeft="25dp"
            android:layout_above="@+id/eventCardLocation"
            android:layout_alignStart="@+id/eventCardHostedImg"
            android:layout_marginStart="13dp" />

        <cariteman.hans.tools.CaviarTextView
            android:id="@+id/eventCardLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginBottom="8dp"
            android:layout_above="@+id/eventCardCategory"
            android:layout_alignStart="@+id/eventCardTitle" />

        <cariteman.hans.tools.CaviarTextView
            android:id="@+id/eventCardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="2017"
            android:textSize="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/eventCardLocation"
            android:layout_marginBottom="10dp" />

        <cariteman.hans.tools.CaviarTextView
            android:id="@+id/eventCardCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:text="Category"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/eventCardDate"
            android:layout_alignBottom="@+id/eventCardDate"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>




</android.support.v7.widget.CardView>